{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "ES6",
    "noEmitHelpers": true,
    "target": "ES6",
    "outDir": "lib/"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "files": [
    "typings/main.d.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
